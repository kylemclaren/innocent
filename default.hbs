<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

	<title>{{meta_title}}</title>
	<meta name="description" content="{{meta_description}}" />

	<meta name="HandheldFriendly" content="True" />
	<meta name="MobileOptimized" content="320" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<link rel="stylesheet" type="text/css" href="/assets/css/screen.css" />

	{{ghost_head}}
</head>

<body class="{{body_class}}">
	
	<header id="site-head"{{#if @blog.cover}} class="cover"{{/if}}>
		<div class="inner">
			{{#if @blog.logo}}
				<a class="js-ajax-link js-show-index" id="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>
        {{#if @blog.description}}
        <span class="blog-description">{{@blog.description}}</span>
				<!-- <h1 class="blog-title"><a class="js-ajax-link js-show-index" id="blog-logo-title" href="{{@blog.url}}">{{@blog.title}}</a></h1> -->
			{{else}}
				<h1 class="blog-title"><a class="js-ajax-link js-show-index" id="blog-title" href="{{@blog.url}}">{{@blog.title}}</a></h1>
			{{/if}}
		</div>
		{{#if @blog.cover}}
			<div id="site-cover" style="background-image: url({{@blog.cover}})"></div>
		{{/if}}
	</header>
	
	<section id="wrapper">
		<div id="ajax-container">
			{{{body}}}
		</div>
	</section>
	
	<footer id="site-footer">
		<div class="inner">
			<a class="subscribe" href="{{@blog.url}}/rss/"><i class="fa fa-rss"></i></a>
			{{/if}}
			<section class="poweredby">&copy SuchShibe.com</section>
		</div>
	</footer>

	{{ghost_foot}}
	<script type="text/javascript" src="/assets/js/libs/jquery.fitvids.js"></script>
	<script type="text/javascript" src="/assets/js/libs/jquery.history.js"></script>
	<script type="text/javascript" src="/assets/js/libs/highlight.pack.js"></script>
	<script type="text/javascript" src="/assets/js/libs/nprogress.js"></script>
	<script type="text/javascript" src="/assets/js/index.js"></script>


	<script type="text/javascript">

	  var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-47423587-1']);
	  _gaq.push(['_setDomainName', 'ec2-54-194-222-20.eu-west-1.compute.amazonaws.com']);
	  _gaq.push(['_setAllowLinker', true]);
	  _gaq.push(['_trackPageview']);

	  (function() {
	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	    ga.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'stats.g.doubleclick.net/dc.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	  })();

	</script>
	
</body>
</html>